<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_sensors"
        android:title="@string/setting_sensors"
        app:iconSpaceReserved="false"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_notifications"
        android:title="@string/setting_notifications"
        app:iconSpaceReserved="false"/>

    <EditTextPreference
        android:key="pref_emergency"
        android:title="@string/setting_emergency"
        android:defaultValue="911"
        android:inputType="number"
        android:digits="0123456789"
        app:iconSpaceReserved="false"/>

</PreferenceScreen>